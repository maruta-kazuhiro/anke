<div class="box">
<%= form_with model: @user, url:user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="form-text"><br />ユーザー名</label><br />
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) 作成　太郎" %>
  </div>

  <div class="field">
    <label class="form-text">メールアドレス</label><br />
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <div class="field">
    <label class="form-text">パスワード ※英字と数字の両方を含めて設定してください</label>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="field">
    <label class="form-text">確認パスワード</label><br />
    <%= f.password_field :password_confirmation,  class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>
